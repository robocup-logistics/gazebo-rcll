    <include>
      <name>C-DS</name>
      <uri>model://mps_delivery</uri>
      <pose>4.5 1.0 0 0 0 0.75</pose>
    </include>
    <include>
      <name>M-DS</name>
      <uri>model://mps_delivery</uri>
      <pose>-4.5 1.0 0 0 0 -0.75</pose>
